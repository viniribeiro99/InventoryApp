<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameViewId"
        style="@style/TextViewSaveActivity"
        android:layout_marginVertical="14dp"
        tools:text="zxczcczczxxx"
        android:textStyle="bold"/>
    <TextView
        style="@style/TextViewDetailsActivity"
        android:text="@string/product_quantity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="35dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/removebutton"
            android:id="@+id/removeButtonId"
            android:focusableInTouchMode="false"/>

        <TextView
            style="@style/TextViewSaveActivity"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            tools:text="1"
            android:id="@+id/quantityViewId"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/addbutton"
            android:id="@+id/addButtonId"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/priceViewId"
        style="@style/TextViewDetailsActivity"
        android:layout_marginVertical="14dp"
        tools:text="asdadasdasdsa" />

    <TextView
        android:id="@+id/supplierViewId"
        style="@style/TextViewDetailsActivity"
        android:layout_marginVertical="14dp"
        tools:text="asdadasdasdsa" />

    <TextView
        android:id="@+id/supplierPhoneViewId"
        style="@style/TextViewDetailsActivity"
        android:layout_marginVertical="14dp"
        tools:text="asdadasdasdsa" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar para o fornecedor"
        android:paddingHorizontal="12dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:id="@+id/callSupplierButton"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>